citHeader("To cite package 'phyloglmstep' in publications use:")

citEntry(entry = "Article", 
  author = personList(as.person("Rutger Aldo Vos")),
  title = "A stepwise model selection algorithm for phylogenetic generalized linear models",
  year = 2020, 
  journal = "Journal of Open Source Software",
  textVersion = paste("Rutger A. Vos (2020)", 
        "A stepwise model selection algorithm for phylogenetic generalized linear models", 
        "Journal of Open Source Software"))
